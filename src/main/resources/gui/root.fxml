<?import com.github.martinfrank.endlessbuilding.gui.MapCanvas?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.martinfrank.endlessbuilding.gui.RootController">
    <!--    <fx:include source="menu.fxml" />-->
    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
        </padding>
        <ScrollPane hbarPolicy="ALWAYS" prefViewportHeight="232" prefViewportWidth="328" vbarPolicy="ALWAYS"
                    HBox.hgrow="ALWAYS">
            <MapCanvas fx:id="mapCanvas"/>
        </ScrollPane>
        <VBox> <!-- prefHeight="200.0" prefWidth="100.0"> -->
            <children>
                <HBox> <!--prefHeight="100.0" prefWidth="200.0"> -->
                    <children>
                        <Button mnemonicParsing="false" text="small" onAction="#setScaleSmall"/>
                        <Button mnemonicParsing="false" text="medium" onAction="#setScaleMedium"/>
                        <Button mnemonicParsing="false" text="big" onAction="#setScaleBig"/>
                    </children>
                </HBox>
                <HBox> <!--prefHeight="100.0" prefWidth="200.0">-->
                    <children>
                        <Button mnemonicParsing="false" text="pause" onAction="#pauseGame"/>
                        <Button mnemonicParsing="false" text="normal" onAction="#continueGame"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </HBox>
</VBox>
